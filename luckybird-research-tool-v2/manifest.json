{
  "manifest_version": 3,
  "name": "LuckyBird WebSocket Research Tool",
  "version": "2.0.0",
  "description": "Advanced WebSocket traffic analyzer with filtering and research capabilities for LuckyBird",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://luckybird.io/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://luckybird.io/*"],
      "js": ["content.js"],
      "css": ["analyzer.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LuckyBird WebSocket Research Tool v2.0"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://luckybird.io/*"]
    }
  ]
}
